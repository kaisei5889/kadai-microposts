<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
    <%= render 'relationships/follow_button', user: @user %>
    <div class="btn btn-light btn-block">
      <a href="<%= user_path(@user) %>"> Profile </a>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="list-unstyled">
      <% @microposts.each do |micropost| %>
          <li class="media mb-3">
            <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
            <div class="media-body">
              <div>
                <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
              </div>
              <div>
                <p class="mb-0"><%= micropost.content %></p>
              </div>
              <div class="row mb-0">
                <% if current_user == micropost.user %>
                  <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
                <% end %>
                <%= render 'favorites/favorite_button', micropost: micropost %>
              </div>
            </div>
          </li>
      <% end %>
      <%= paginate @microposts %>
    </ul>
  </div>
</div>